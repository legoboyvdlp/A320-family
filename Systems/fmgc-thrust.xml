										<value>0.83</value>
									</less-than>
									<equals>
										<property>/systems/thrust/state1</property>
										<value>MAN THR</value>
									</equals>
								</and>
								<and>
									<less-than>
										<property>/controls/engines/engine[1]/throttle-pos</property>
										<value>0.83</value>
									</less-than>
									<equals>
										<property>/systems/thrust/state2</property>
										<value>MAN THR</value>
									</equals>
								</and>
							</or>
						</and>
						<equals>
							<property>/systems/thrust/state1</property>
							<value>MAN</value>
						</equals>
						<equals>
							<property>/systems/thrust/state1</property>
							<value>CL</value>
						</equals>
						<equals>
							<property>/systems/thrust/state2</property>
